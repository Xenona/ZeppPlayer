{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "module": "es2020",
    "target": "ES2019",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  }
}